{% set content = page.header.content %}
{% set article = page.header.article %}

{% block content %}

    <div class="blog-section">
         <div class="container">
             <div class="my-service"> 
                <p class="section-name"> {{content.title}} </p>
                <h2 class="section-title"> {{content.head}} </h2>
            </div>

            <div class=" d-flex justify-content-around ">
                {% for article in page.header.article %}
                <div class="card recent" style="width: 20rem;">
                    <img src="{{page.media[article.image].url}}" class="card-img-top" alt="...">
                    <div class="card-body">
                       <div class="d-flex justify-content-between align-items-center "> 
                             <p class="card-text">{{article.title}}</p>
                            <p calss= "blog_title">{{article.date}} </p>
                        </div>
                        <h5 class="card-title">{{article.heading}} </h5>
                        <p class="card-text details">{{article.details}}</p>
                         <a href="#" class="link d-flex align-items-center gap-2">{{article.btn}} <i class="fa-solid fa-arrow-right-long"></i></a>
                    </div>
                 </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}